<div id="joinView" class="container-fluid default-container text-center" style="margin-top:-20px;min-height: 550px;position: relative;" data-user="<%= user%>">
  <% if(user){ %>
  <div style="height:30px;"><h4>邀请好友</h4></div>
  <div class="referral-yellow row">
    <image style="width: 100%;max-width: 363px;" class="middle" src="/images/referral@2x.png"></image>
  </div>

  <h3 style="padding-top: 10px;">送朋友5元积分<br/>朋友下单后，您会获得5元积分</h3>
  <div class="divider" style="width: 30%;"></div>

  <div style="margin-bottom: 50px;">
    <div class="row">
      <div class="col-lg-2 col-xl-3"></div>
      <div class="col-xs-12 col-lg-8 col-xl-6 text-center">
        <div class="social-share"></div>

        <div class="row">
          <div class="col-lg-3"></div>
          <div class="col-xs-12 col-lg-6" style="margin-top: 15px;">
            <div class="row">
              <div class="col-lg-9">
                <input id="linkUrl" class="form-control" type="text" readonly value="<%= baseUrl + '/join?code=' + user.referralCode%>">
              </div>
              <div class="col-lg-3">
                <button id="copyBtn" class="btn btn-outline text-red border-red" onclick="copyLink();" data-toggle="tooltip" title="<%= __('click-to-copy')%>" data-title-clicked="<%= __('copied')%>"><%= __('copy')%></button>
              </div>
            </div>
          </div>
          <div class="col-lg-3"></div>
        </div>
      </div>
      <div class="col-lg-2 col-xl-3"></div>
    </div>
  </div>


  <%}else{%>
  <h3>Hi <%= __('user')%>, 你的朋友 <%= referrer.firstname%> 邀请你加入SFMeal，立即加入来获得10元现金券！</h3>
  <div id="loginView">
    <div class="alert alert-danger hide" data-toggle="i18n" data-key="userSignInError"></div>
    <div class="popup box middle signin" style="width: 300px;">

      <button id="FBBtn" class="popline btn btn-blue btn-lg round light" style="margin-left: 15px;">
        <span><i class="fa fa-facebook-f fa" style="padding-right: 15px;"></i>Facebook <span data-toggle="i18n" data-key="login">账号登录</span></span>
      </button>

      <h4></h4>

      <button id="GoogleBtn" class="popline btn btn-outline-light btn-lg outline round text-orange white" style="margin-left: 15px;">
        <span><img style="width: 30px;height: 30px;margin-right: 15px;display: inline;" src="/images/g-logo.png">Google <span data-toggle="i18n" data-key="login">帐号登陆</span></span>
      </button>

      <!--<h4></h4>-->

      <!--<button id="wechatBtn" class="popline btn btn-outline-light btn-lg outline round white text-orange" style="margin-left: 15px;">-->
        <!--<span><i class="fa fa-wechat fa-lg" style="padding-right: 15px;"></i>微信 <span data-toggle="i18n" data-key="login">帐号登陆</span></span>-->
      <!--</button>-->

      <h2 data-toggle="i18n" data-key="emailLogin"></h2>

      <form class="text-center" data-toggle="validator" role="form">
        <div class="form-group">
          <label class="sr-only" for="emailInput" data-toggle="i18n" data-key="email"></label>
          <input type="email" class="form-control" id="emailInput2" data-toggle="i18n" data-pattern-key="emailBadFormat" data-pattern-error="bad format" placeholder="邮箱 (Email)" required>
          <div class="help-block with-errors"></div>
        </div>

        <div class="form-group">
          <label class="sr-only" for="passwordInput" data-toggle="i18n" data-key="password"></label>
          <input type="password" class="form-control" id="passwordInput2" pattern="^[_A-z0-9]{8,}$" data-toggle="i18n" data-pattern-key="passwordRequirement" placeholder="密码 (Password)" data-pattern-error="bad format" required>
          <div class="help-block with-errors"></div>
        </div>

        <div class="form-group">
          <button id="signin-btn" type="submit" class="btn btn-danger btn-lg round red popline" data-toggle="i18n" data-key="login">帐号登录</button>
        </div>

      </form>

      <span class="divider popline"></span>

      <h6 class="text-center"><span data-toggle="i18n" data-key="newlyJoin">新加入?点这里</span><a toggle="modal" data-target="#myModal" data-href="/templates/user/signup.html" href="javascript:void(0)" onclick="toggleModal(event)" data-toggle="i18n" data-key="register">注册</a></h6>
      <h6 class="text-center"><span data-toggle="i18n" data-key="forgetPassword">忘记密码</span>?<a toggle="modal" data-target="#myModal" data-href="/templates/user/sendEmail.html" href="javascript:void(0)" onclick="toggleModal(event)" data-toggle="i18n" data-key="reset">点击重置</a></h6>

    </div>
  </div>
  <%}%>
</div>

<script>

  $("#wechatBtn").click(function(){
      $("#wechatOverlay").removeClass('hide');
      $("#wechatOverlay").toggle();
  })

  $("#wechatOverlay").click(function(){
    $("#wechatOverlay").toggle();
  })

  $('.social-share').share({
    title : "SFMeal私房菜平台，喂想家的你，加入即可领取5元现金券吧！",
    sites : ['wechat','qq','weibo','facebook'],
    description : "十三香小龙虾，葱油拌面，千里香小馄饨，重庆酸辣粉...欢迎回家吃饭。"
  });

  function copyLink(){
    var copyText = $("#linkUrl");

    /* Select the text field */
    copyText.select();

    /* Copy the text inside the text field */
    document.execCommand("Copy");

    /* Alert the copied text */
    $("#copyBtn").tooltip('hide')
      .attr('data-original-title', $("#copyBtn").data("title-clicked"))
      .tooltip('fixTitle')
      .tooltip('show')
      .focus();
  }

  var user = $("#joinView").data("user");
  if(!user){
      wechatLogin();
  }

  setup();
  new LoginView({model : new Auth(), el: $("#loginView")});
  if(browserVersion()==="uiwebview"){$("#GoogleBtn").hide();}

</script>

