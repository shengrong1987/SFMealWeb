
  <div class="popup box middle">
    <div class="alert alert-danger hide" data-toggle="alert">
      <strong>注意！</strong> 这个菜已经被订完了，请选择其他。
    </div>
    <table id="order" class="table" data-meal="<%= order.meal.id%>" data-order="<%= order.id%>">
      <thead>
      <tr>
        <th colspan="3">餐费</th>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th>名称</th>
        <td>单价</td>
        <td>数量</td>
      </tr>
      </thead>
      <tbody>
      <%
      var list = order.orders;
      order.dishes.forEach(function(dish){
        var dishId = dish.id;
        var number = list[dishId];
      %>
      <tr class="success item" data-id=<%= dish.id%> data-left-amount=<%= order.meal.leftQty[dish.id] %>>
        <td colspan="3"><%= dish.title%></td>
        <td class="price" value="<%= dish.price.toFixed(2)%>">$<%= dish.price.toFixed(2)%></td>
        <td>
          <button type="button" class="btn btn-default btn-xs" onclick="javascript:orderFood('<%= dish.id %>',-1)">-</button>
          <span class="amount" style="padding: 5px;" data-value="<%= number%>">  <%= number%>  </span>
          <button type="button" class="btn btn-default btn-xs" onclick="javascript:orderFood('<%= dish.id %>',1)">+</button>
        </td>
      </tr>
      <%})%>
      <tr></tr>
      <tr>
        <th colspan="3"></th>
        <td></td>
        <th class="text-right subtotal">餐费小计: $0.00</th>
      </tr>
      <tr></tr>
      <tr>
        <th colspan="3">取餐方式</th>
        <td>预计时间</td>
        <td>送餐费</td>
      </tr>
      <tr></tr>
      <tr class="info">
        <td colspan="3">自取</td>
        <td>30分钟</td>
        <td>免</td>
      </tr>
      <tr>
        <th colspan="3"></th>
        <td></td>
        <th class="text-right delivery" data-value="0">送餐费小计: $0.00</th>
      </tr>
      <tr></tr>
      <tr></tr>
      <tr>
        <th colspan="3"></th>
        <td></td>
        <th class="text-right total" data-value="0">合计: $0.00</th>
      </tr>
      </tbody>
    </table>

    <span class="divider popline"></span>

    <button type="button" class="btn btn-danger red" onclick="javascript:makeOrder(true)">确认订单</button>
  </div>

  <script>
    loadOrder(false);
  </script>

