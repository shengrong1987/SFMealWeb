<div class="email-banner vertical-align dark">
  <div style="width: 600px;" class="middle banner-text">
    <div class="row vertical-align" style="margin-bottom: 5px;">
      <div class="col-xs-3 cursor-pointer" onclick="location.href='/'">
        <a href="/" class="logo-remote"></a>
      </div>
      <div class="col-xs-9 text-right">
        <a class="btn btn-red btn-inline" href='http://www.sfmeal.com'><%= enterwebsite%></a>
      </div>
    </div>
  </div>
</div>

<div class="green" style="padding: 25px;">
  <div class="box-email white relative middle text-left">
    <h4 class="text-green"><%= reviewordertitle%></h4>
    <p>Hi <%= recipientName%>,</p>
    <p><%= reviewordercontext1%><%= username%><%= reviewordercontext2%></p>
    <div class="divider" style="margin-bottom: 10px;"></div>
    <p><%= dish ? reviewdish : reviewmeal%>: <%= title%></p>
    <p><%= scoreLabel%> : <%= score%></p>
    <p><%= content%>: <%= review%></p>
    <p><%= reviewtime%>: <%= createdAt%></p>
    <p></p>
    <div class="row text-center">
      <a class="btn btn-green btn-inline" href="http://www.sfmeal.com/host/<%= host.id%>"><%= viewreview%></a>
    </div>
  </div>

</div>

<%- include ../email_footer %>
