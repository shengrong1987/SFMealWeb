<div class="email-banner vertical-align dark">
  <div style="width: 600px;" class="middle banner-text">
    <div class="row vertical-align" style="margin-bottom: 5px;">
      <div class="col-xs-3 cursor-pointer" onclick="location.href='https://www.sfmeal.com'">
        <a href="/" class="logo-remote"></a>
      </div>
      <div class="col-xs-9 text-right">
        <a class="btn btn-red btn-inline" href='https://www.sfmeal.com'><%= enterwebsite%></a>
      </div>
    </div>
  </div>
</div>

<div class="green" style="padding: 25px;">

  <div class="text-white text-center">
    <h1>WELCOME TO SFMEAL</h1>
    <h4>欢迎您的到来！</h4>
    <h1></h1>
  </div>

  <div class="box-email white relative middle">
    <h4 class="text-green"><b><%= welcometitle%><%= recipientName%>!</b></h4>
    <p>Hi <%= recipientName%>,</p>
    <p><%= welcomecontext%></p>
    <div class="divider"></div>
    <h4 class="text-center text-green"><%= beforestart%></h4>
    <h1></h1>
    <div class="row">
      <div class="col-xs-4">
        <div class="pull-right chef-icon-remote" style="width: 130px;height: 130px;"></div>
      </div>
      <div class="col-xs-8">
        <p><%= chefidentityverification%></p>
        <p class="text-grey"><%= chefidentityverificationcontext%></p>
        <a class="btn btn-outline-light lightgrey" href="https://www.sfmeal.com/apply"><%= clickenterinfo%></a>
      </div>
    </div>

    <div class="divider"></div>

    <div class="row">
      <div class="col-xs-4">
        <div class="pull-right camera-icon-remote" style="width: 130px;height: 130px;"></div>
      </div>
      <div class="col-xs-8">
        <p><%= kitchenverification%></p>
        <p class="text-grey"><%= kitchenverificationcontext%></p>
        <a class="btn btn-outline-light lightgrey" href="https://www.sfmeal.com/host/<%= host.id%>/checklist"><%= clickuploadinfo%></a>
      </div>
    </div>

    <div class="divider"></div>

    <div class="row">
      <div class="col-xs-4">
        <div class="pull-right camera-icon-remote" style="width: 130px;height: 130px;"></div>
      </div>
      <div class="col-xs-8">
        <p><%= foodhandlerlicenseverification%></p>
        <p class="text-grey"><%= foodhandlerlicenseverificationcontext%></p>
        <a class="btn btn-outline-light lightgrey" href="https://www.sfmeal.com/host/me#myinfo"><%= clickapply%></a>
      </div>
    </div>

  </div>

</div>
<%- include ../email_footer %>
