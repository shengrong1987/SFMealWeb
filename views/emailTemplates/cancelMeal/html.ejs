<div class="email-banner vertical-align dark">
  <div style="width: 600px;" class="middle banner-text">
    <div class="row vertical-align" style="margin-bottom: 5px;">
      <div class="col-xs-3 cursor-pointer" onclick="location.href='/'">
        <a href="/" class="logo-remote"></a>
      </div>
      <div class="col-xs-9 text-right">
        <a class="btn btn-red btn-inline" href='https://www.sfmeal.com'><%= enterwebsite%></a>
      </div>
    </div>
  </div>
</div>

<div class="green" style="padding: 25px;">
  <div class="box-email white relative middle text-left">
    <h4 class="text-green"><%= pity%>..<%= cancelmealtitle%><b><%= cancel%></b></h4>
    <p>Hi <%= recipientName%>,</p>
    <p><%= cancelmealcontext%></p>
    <div class="divider" style="margin-bottom: 10px;"></div>
    <p><%= cancelreason%>: <%= mealfailrequirement%></p>
    <div class="divider" style="margin-bottom: 10px;"></div>
    <p><%= mealnumber%>:<%= id%></p>
    <table class="table table-email">
      <% dishes.forEach(function(dish){
      %>
      <tr>
        <td><img src="<%= dish.photos[0].v%>" style="width: 100px;"></td>
        <td class="text-green" style="vertical-align: middle;"><%= dish.title%></td>
        <td style="vertical-align: middle;"><%= qty%>: <%= totalQty[dish.id]%><%= fen%></td>
        <td style="vertical-align: middle;"><%= left%>: <%= leftQty[dish.id]%><%= fen%></td>
      </tr>
      <%});%>
      <tr>
        <td><%= mealcreatetime%>: <%= createdAt%></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><%= preorderstarttime%>: <%= provideFromTime%></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><%= preorderendtime%>: <%= provideTillTime%></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td class="text-red"><%= canceltime%>: <%= updatedAt%></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </table>
    <div class="row text-center">
      <a class="btn btn-green btn-inline" href="https://www.sfmeal.com/host/me#mymeal"><%= openmeal%></a>
    </div>
  </div>
</div>

<%- include ../email_footer %>
