<div class="email-banner vertical-align dark">
  <div style="width: 600px;" class="middle banner-text">
    <div class="row vertical-align" style="margin-bottom: 5px;">
      <div class="col-xs-3 cursor-pointer" onclick="location.href='/'">
        <a href="/" class="logo-remote"></a>
      </div>
      <div class="col-xs-9 text-right">
        <a class="btn btn-red btn-inline" href='http://www.sfmeal.com'>进入网站</a>
      </div>
    </div>
  </div>
</div>

<div class="green" style="padding: 25px;">
  <div class="box-email white relative middle text-left">
    <h4 class="text-green"><%= mealorderstarttitle%></h4>
    <p>Hi <%= recipientName%>,</p>
    <p><%= mealorderstartcontext%></p>
    <div class="divider" style="margin-bottom: 10px;"></div>
    <p><%= mealname%>: <%= title%></p>
    <p><%= mealnumber%>: <%= id%></p>
    <table class="table table-email">
      <% dishes.forEach(function(dish){ %>
      <tr>
        <td><img src="<%= dish.photos[0].v%>" style="width: 100px;"></td>
        <td class="text-green" style="vertical-align: middle;"><%= dish.title%></td>
        <td style="vertical-align: middle;"><%= totalQty[dish.id]%><%= fen%></td>
        <td style="vertical-align: middle;text-align: right;">$<%= dish.price.toFixed(2)%></td>
      </tr>
      <%});%>
      <tr class="border-less">
        <td></td>
        <td></td>
        <td></td>
        <td style="text-align: right;"><%= deliveryfee%>: $<%= delivery_fee.toFixed(2)%></td>
      </tr>
      <tr>
        <td><%= step2%>: <%= chef.full_address%></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><%= providetime%>: <%= provideFromTime%> - <%= provideTillTime%></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td class="text-red"><%= readytime%>: <%= prepareTime%><%= min%></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </table>
    <div class="row text-center">
      <a class="btn btn-green btn-inline" href="http://www.sfmeal.com/host/me#myorder"><%= openorder%></a>
    </div>
  </div>

</div>

<%- include ../email_footer %>
