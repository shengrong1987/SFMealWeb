<div id="newUserRewardView" class="text-center">
  <div class="row">
    <div class="col-12">
      <button type="button" class="close relative text-red" style="top: 53px;right: 8px;font-size: 48px;" onclick="javascript:h.dismissModal();" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
  <div class="row text-center" style="margin-top: 130px;">
    <div class="col-12">
      <div class="d-flex justify-content-center vertical-align text-white">
        <div class="mr-2">-</div>
        <h3 class="none-margin" style="font-weight: lighter;"><%= __('new-user-reward-title')%></h3>
        <div class="ml-2">-</div>
      </div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-12">
      <h5 class="mt-3 text-grey"><%= __('new-user-reward-1')%></h5>
      <h1 class="text-red"><%= __('new-user-reward-2')%></h1>
    </div>
  </div>

  <div class="row mt-4 text-left" style="padding-left: 70px;">
    <div class="col-12">
      <div class="d-flex vertical-align" style="height: 53px;line-height: 53px;">
        <span class="mr-auto">1.<%= __('nav-bar-register')%></span>
        <% if(user){%>
        <i class="fa fa-2x text-green fa-check-circle" style="margin-right: 70px;"></i>
        <% }%>
      </div>
      <div class="d-flex vertical-align" style="height: 53px;line-height: 53px;">
        <span class="mr-auto">2.<%= __('verify-email')%></span>
        <% if(user && user.emailVerified){%>
          <i class="fa fa-2x text-green fa-check-circle" style="margin-right: 70px;"></i>
        <% }%>
      </div>
      <div class="d-flex vertical-align" style="height: 53px;line-height: 53px;">
        <span class="mr-auto">3.<%= __('redeem-reward')%></span>
        <% if(user && !!user.newUserRewardIsRedeemed){%>
          <i class="fa fa-2x text-green fa-check-circle" style="margin-right: 70px;"></i>
        <% }else{%>
          <i id="rewardRedeemedIcon" class="fa fa-2x text-green fa-check-circle d-none" style="margin-right: 70px;"></i>
        <% }%>
      </div>
    </div>
  </div>

  <div class="row vertical-align mt-4" style="height: 97px;">
    <div class="col-12">
      <% if(!user){%>
        <a class="btn btn-warning" style="width: 190px;height: 40px;" toggle="modal" data-target="#myModal" data-model="user" data-action="signup" href="javascript:void(0)" onclick="h.toggleModal(event)">
          <%= __('nav-bar-register')%>
        </a>
      <% }else if(!user.emailVerified){%>
        <a class="btn btn-warning" style="width: 190px;height: 40px;" toggle="modal" data-target="#myModal" data-model="user" data-action="sendEmail" href="javascript:void(0);" onclick="h.toggleModal(event)">
          <%= __('verify-email')%>
        </a>
      <% }else if(!user.newUserRewardIsRedeemed){%>
        <button id="redeemRewardBtn" class="btn btn-warning" style="width: 190px;height: 40px;" data-user="<%= user.id || ''%>">
          <%= __('redeem-reward')%>
        </button>
      <% }%>
        <button id="rewardRedeemedBtn" onclick="h.dismissModal();" class="btn btn-warning d-none" style="width: 190px;height: 40px;">
          <%= __('reward-redeemed')%>
        </button>
    </div>
  </div>

</div>

<script>
  var newUserRewardView = new appObj.NewUserRewardView({ el : $("#newUserRewardView"), model : new appObj.User()})
</script>
