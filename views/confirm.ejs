                <div class="form-group">
                  <label class="control-label" for="textinput">CVV/CVV2</label>
                  <div>
                    <input name="cvv" placeholder="CVV" maxlength="4" class="card-cvc form-control" required data-error="<%= __('cvv-wrong-format')%>">
